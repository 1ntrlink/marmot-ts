{
  "name": "@internet-privacy/marmots",
  "version": "0.0.1",
  "type": "module",
  "description": "Marmot protocol implementation in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "pnpm --filter examples dev",
    "build": "pnpm run clean && pnpm run compile",
    "clean": "rimraf ./dist",
    "compile": "tsc -b tsconfig.build.json",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm build && changeset publish --provenance",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marmot-protocol/marmot-ts.git"
  },
  "keywords": [
    "nostr",
    "mls",
    "marmot"
  ],
  "author": "Marmot Protocol",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marmot-protocol/marmot-ts/issues"
  },
  "homepage": "https://github.com/marmot-protocol/marmot-ts#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.1.0",
    "deno": ">=2.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./mls": {
      "types": "./src/mls.d.ts",
      "import": "./src/mls.js",
      "default": "./src/mls.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "default": "./dist/client/index.js"
    },
    "./store": {
      "types": "./dist/store/index.d.ts",
      "import": "./dist/store/index.js",
      "default": "./dist/store/index.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@hpke/core": "^1.7.5",
    "@noble/ciphers": "^2.1.1",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "applesauce-common": "^5.1.0",
    "applesauce-core": "^5.1.0",
    "eventemitter3": "^5.0.4",
    "nostr-tools": "^2.23.1",
    "ts-mls": "2.0.0-rc.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.13",
    "applesauce-accounts": "^5.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "rimraf": "~6.0.1",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  }
}
